    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch coordinator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/coordinator/cmd/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "NIX_HARDENING_ENABLE": ""
            }
        },
        {
            "name": "Launch runner",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/runner/cmd/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "NIX_HARDENING_ENABLE": ""
            }
        }
    ]
}